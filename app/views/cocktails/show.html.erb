<div class="container">
  <div class="row">

    <%= render "cocktail", cocktail: @cocktail %>
    <% @doses.each do |dose| %>
      <%= render "doses/dose", dose: dose, cocktail: @cocktail, ingredient: dose.ingredient%>
    <% end %>
  </div>

  <div class="row">

      <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-success"%>

      <br>
      <br>

      <%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} %>
      <br>
      <br>

      <%= link_to "Back to list of cocktails", cocktails_path, {class: "btn btn-default"} %>

  </div>


</div>
